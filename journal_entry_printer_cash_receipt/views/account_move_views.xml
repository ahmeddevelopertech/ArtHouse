<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add journal labels to the account move form -->
    <record id="view_move_form_inherit_journal_labels" model="ir.ui.view">
        <field name="name">account.move.form.inherit.journal.labels</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add journal label at the top of the form -->
            <xpath expr="//div[hasclass('oe_title')]" position="inside">
                <div class="oe_right" style="margin-top: 10px;">
                    <span class="oe_read_only" invisible="not company_id">
                        <span class="badge bg-primary" style="font-size: 14px;">
                            <field name="company_id" widget="many2one" options="{'no_open': True, 'no_create': True}"/>
                        </span>
                    </span>
                    <span class="oe_read_only" invisible="not journal_id" style="margin-left: 5px;">
                        <span class="badge bg-info" style="font-size: 14px;">
                            <field name="journal_id" widget="many2one" options="{'no_open': True, 'no_create': True}"/>
                        </span>
                    </span>
                    <span class="oe_read_only" invisible="move_type != 'out_invoice'" style="margin-left: 5px;">
                        <span class="badge bg-success" style="font-size: 14px;">
                            Customer Invoice
                        </span>
                    </span>
                    <span class="oe_read_only" invisible="move_type != 'in_invoice'" style="margin-left: 5px;">
                        <span class="badge bg-warning" style="font-size: 14px;">
                            Vendor Bill
                        </span>
                    </span>
                </div>
            </xpath>

            <!-- Override context for invoice lines to ignore company filter -->
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="context">{'company_id': False}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
                <attribute name="context">{'company_id': False}</attribute>
            </xpath>

            <!-- Add button to print journal entry with icon and proper spacing -->
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_print_journal_entry_receipt"
                        type="object"
                        class="btn btn-secondary d-flex align-items-center justify-content-center"
                        groups="account.group_account_user">
                    <i class="fa fa-money me-2" role="img" aria-label="Cash Receipt"/>
                    <span>Print Cash Receipt</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>