<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- تعطيل القاعدة الافتراضية "Account Entry" -->
    <record id="disable_default_account_entry_rule" model="ir.rule">
        <field name="name">[OVERRIDE] Account Entry</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- تعطيل القاعدة الافتراضية لخطوط القيود اليومية -->
    <record id="disable_default_account_move_line_rule" model="ir.rule">
        <field name="name">[OVERRIDE] Account Move Line</field>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>