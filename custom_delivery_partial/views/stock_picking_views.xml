<odoo>
    <record id="view_picking_form_partial_delivery" model="ir.ui.view">
        <field name="name">stock.picking.partial.delivery.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Delivered Products">
                    <button name="action_open_partial_tab" type="object" string="Prepare Partial Lines"/>
                    <field name="partial_line_ids">
                        <tree editable="bottom">
                            <field name="move_id" invisible="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="ordered_qty" readonly="1"/>
                            <field name="qty_to_deliver"/>
                        </tree>
                    </field>
                    <button name="action_apply_partial_delivery" type="object" string="Apply Partial Delivery"
                            class="oe_highlight"/>
                </page>
            </notebook>
        </field>
    </record>
</odoo>