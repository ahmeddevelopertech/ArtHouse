<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice Form View -->
    <record id="view_move_form_installment" model="ir.ui.view">
        <field name="name">account.move.form.installment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add installment section inside the notebook -->
            <field name="partner_shipping_id" position="after">
                <field name="has_installments"/>
            </field>
            <xpath expr="//notebook" position="inside">
                <page string="Installments" invisible="not has_installments">

                    <group>
                        <field name="installment_total" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                    </group>

                    <field name="installment_ids" context="{'default_move_id': id}">
                        <tree editable="bottom">
                            <field name="due_date" required="1"/>
                            <field name="partner_id" string="Customer" readonly="1"/>
                            <field name="amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}" required="1"/>
                            <field name="state" widget="badge"
                                   options="{'classes': {'draft': 'default', 'due': 'warning', 'paid': 'success', 'overdue': 'danger'}}"/>
                            <field name="payment_id" widget="many2one" readonly="1"/>
                            <button name="action_mark_as_paid"
                                    string="Mark as Paid"
                                    type="object"
                                    class="btn-primary"
                                    icon="fa-money"
                                    invisible="state == 'paid'"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <!-- Show installment total in header -->
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <field name="has_installments" invisible="1"/>
                <field name="installment_total" widget="monetary"
                       invisible="not has_installments"/>
            </xpath>
        </field>
    </record>

    <!-- Invoice List View -->
    <record id="view_move_tree_installment" model="ir.ui.view">
        <field name="name">account.move.tree.installment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="has_installments" invisible="1"/>
                <field name="installment_total" widget="monetary"
                       invisible="not has_installments"
                       options="{'currency_field': 'currency_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>