<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Installment Notification Cron -->
    <record id="ir_cron_installment_notification" model="ir.cron">
        <field name="name">Installment Due Date Notifications</field>
        <field name="model_id" ref="model_account_move_installment"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_due_installments()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>