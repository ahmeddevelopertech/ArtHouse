<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rule to allow accountants to see ALL journal entries across branches -->
    <record id="rule_accountant_see_all_account_moves" model="ir.rule">
        <field name="name">Accountant: See All Journal Entries Across Branches</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

